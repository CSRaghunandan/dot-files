# general aliases
alias c=clear
alias u=cd ~/
alias o=pwd

# system commands
alias p="sudo pacman"
alias ssh="TERM=screen-256color ssh"
alias SS="sudo systemctl"
alias ka="killall"

# emacs related aliases
alias el="TERM=xterm-256color eless"
alias ec='emacsclient -nc -a ""'
alias eg='emacsclient -n -a ""'
alias et='TERM="xterm-256color" emacsclient -t -a ""'

alias ssh="TERM=screen-256-color ssh"

# aliases for lsd
alias ls='lsd'
alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'

# use bat instead of cat
alias cat=bat

# use broot as the alias for tree
alias tree=broot

# aliases for z.lua
alias zz='z -c'      # restrict matches to subdirs of $PWD
alias zi='z -i'      # cd with interactive selection
alias zf='z -I'      # use fzf to select in multiple matches
alias zb='z -b'      # quickly cd to the parent directory

# use prettyping instead of ping
# https://github.com/denilsonsa/prettyping
alias ping=prettyping
